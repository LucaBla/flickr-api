
<div class="search-form <%= request.fullpath == '/' ? 'search-form-root' : 'search-form-searched' %>">
  <%= form_with(url: "/", method: 'get') do %>
  <div class="form-group">
    <%= text_field_tag :user_id, nil, placeholder: "Enter User ID", style: "text-align: center" %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Show photos' %>
  </div>
<% end %>
</div>

<% if !params[:user_id].nil? %>
  <div class="photos-container">
    <% @photos.each do |p| %>
      <div class="photo">
        <img src="<%= Flickr.url_n(p) %>"/>
        <p><%= p.title %></p>
      </div>
    <% end %>
  </div>
<% end %>